					<mandatory>true</mandatory>
					<default>0</default>
					<!-- TODO: constraints? -->
				</property>

				<property name="ucm:indoor_artifact_y">
					<title>IPS Y</title>
					<type>d:double</type>
					<mandatory>true</mandatory>
					<default>0</default>
					<!-- TODO: constraints? -->
				</property>
			</properties>
		</aspect>

		<aspect name="ucm:outdoor_artifact_aspect">
			<title>Outdoor Artifact Aspect</title>
			<properties>
				<property name="ucm:outdoor_artifact_x">
